	<section class="job-bg user-page">
		<div class="container">
			<div class="row text-center">
				<!-- user-login -->			
				<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
					<div class="user-account job-user-account">
						<h2>Create An Account</h2>
							<ul class="nav nav-tabs text-center" role="tablist">
								<li role="presentation" class="active"><a href="#find-job" aria-controls="find-job" role="tab" data-toggle="tab">Sign up</a></li>
								<li role="presentation"><a href="#post-job" aria-controls="post-job" role="tab" data-toggle="tab">Sign in</a></li>
							</ul>

							<div class="tab-content">
								<div role="tabpanel" class="tab-pane active" id="find-job">
									<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
										<div class="form-group">
										    <%= f.input :email, required: true, autofocus: true %>
										</div>
										<div class="form-group">
										    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
										</div>
										<div class="form-group">
											<%= f.input :password_confirmation, required: true %>
										</div>
		
										<div class="checkbox">
											<label class="pull-left checked" for="signing"><input type="checkbox" name="signing" id="signing"> By signing up for an account you agree to our Terms and Conditions </label>
										</div><!-- checkbox -->	
										<%= f.button :submit, "Welcome" %>	
									
								</div>
								<div role="tabpanel" class="tab-pane" id="post-job">
									
										<div class="form-group">
											<%= f.input :email, required: false, autofocus: true %>
										</div>
										<div class="form-group">
											<%= f.input :password, required: false %>
										</div>
										<%= f.button :submit, "Welcome" %>	
									<% end %>
								</div>
							</div>				
					</div>
				</div><!-- user-login -->			
			</div><!-- row -->	
		</div><!-- container -->
	</section><!-- signup-page -->


<%= render "devise/shared/links" %>
